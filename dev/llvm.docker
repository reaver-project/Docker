FROM ubuntu:wily
MAINTAINER Micha≈Ç 'Griwes' Dominiak <griwes@griwes.info>

ARG http_proxy=
ARG https_proxy=

RUN export http_proxy=${http_proxy}; export https_proxy=${https_proxy}; apt-get update && apt-get install make binutils libgcc-5-dev -y && apt-get clean

ENV PATH=/usr/bin/clang-wrappers:$PATH

COPY ./built /
RUN mv /usr/bin/ld /usr/bin/ld.orig; ln -sf /usr/bin/clang-wrappers/ld /usr/bin/ld

CMD bash

